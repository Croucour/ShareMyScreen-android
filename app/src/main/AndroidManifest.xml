<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sharemyscreen.sharemyscreen" >
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" android:label="@string/app_name"/>
        <activity android:name=".LogoutActivity" android:label="@string/app_name"/>
        <activity android:name=".SettingsActivity" android:label="@string/app_name"/>
        <activity android:name=".RoomActivity" android:label="@string/app_name"/>
        <activity android:name=".ProfileActivity" android:label="@string/app_name"/>
        <activity android:name=".LogOfflineActivity" android:label="@string/app_name"/>

        <receiver android:name="sharemyscreen.sharemyscreen.Services.MyBroadcastreceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <service android:name="sharemyscreen.sharemyscreen.Services.MyService" />
    </application>

</manifest>
