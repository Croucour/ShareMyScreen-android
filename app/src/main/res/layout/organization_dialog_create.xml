<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/organization_title"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="@string/organization_dialog_create_title"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:id="@+id/LinearLayout_createOrganization">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/organization_dialog_create_name_inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/organization_dialog_create_name_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/organization_dialog_create_name_editText_hint"
                android:singleLine="true"
                android:lines="1"/>
            <requestFocus></requestFocus>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="70dp"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.dd.processbutton.iml.ActionProcessButton
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/organization_dialog_create_submit"
            android:id="@+id/organization_dialog_create_submit"
            android:layout_weight="1.0"
            android:theme="@style/MyButtonLoading"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <com.dd.processbutton.iml.ActionProcessButton
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/organization_dialog_create_cancel"
            android:id="@+id/organization_dialog_create_cancel"
            android:layout_weight="1.0"
            android:theme="@style/MyButtonLoading"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>


</LinearLayout>